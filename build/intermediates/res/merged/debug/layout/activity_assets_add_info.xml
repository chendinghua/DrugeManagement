<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/layout_assets_loan_title"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="需要扫描数量"
            />
        <TextView
            android:id="@+id/tv_assets_add_all_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="异常数量"
            />
        <TextView
            android:id="@+id/tv_assets_add_error_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="0"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="扫到数量"
            />
        <TextView
            android:id="@+id/tv_assets_add_current_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="0"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="编号"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="RFID编号"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="序列号"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="产品名称"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="产品类型"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_add_storage_name_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="资产状态"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13.53"
        android:orientation="vertical"
        >
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/sf_assets_add_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >

        </android.support.v4.widget.SwipeRefreshLayout>
        <com.example.druge.ui.view.ScrollListView
            android:id="@+id/lv_assets_add_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.example.druge.ui.view.ScrollListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center_vertical"
        android:id="@+id/layout_assets_loan_power"
        >

        <Button

            android:id="@+id/btn_assets_add_low_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="1"
            android:text="低频" />

        <Button
            android:id="@+id/btn_assets_add_medium_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中频"
            android:tag="1"
            />

        <Button
            android:id="@+id/btn_assets_add_high_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高频"
            android:tag="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前频率"
            />
        <TextView
            android:id="@+id/tv_assets_add_current_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="低频"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="10dp"
            >

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="38dp"
            android:gravity="center"
            android:text="描述"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:id="@+id/et_add_assets_remark"
            />

    </LinearLayout>
<!--    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="签字"
            android:textSize="28dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            >

            <com.example.druge.ui.view.FingerDrawView
                android:id="@+id/finger_assets_loan_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aaa"
                />

        </LinearLayout>

    </LinearLayout>-->
    <TextView
        android:id="@+id/tv_title_sign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:text="签字"
        android:textSize="28dp"
        />
    <com.example.druge.ui.view.FingerDrawView
        android:id="@+id/finger_assets_loan_sign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"

        android:background="#aaa"
        />
    <ImageView
        android:visibility="gone"
        android:id="@+id/image_sign_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="horizontal"
        >
        <Button
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_assets_loan_cancel"
            android:layout_height="match_parent"
            android:background="@drawable/shape_background_blue_button"
            android:paddingTop="-10dp"
            android:paddingBottom="-10dp"

            android:paddingRight="10dp"
            android:text="重写"
            />
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_background_blue_button"
            android:paddingTop="-10dp"
            android:paddingBottom="-10dp"
            android:text="刷新"
            />
        <Button
            android:id="@+id/btn_assets_add_commit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="提交任务"
            android:background="@drawable/shape_background_blue_button"
            android:paddingTop="-10dp"
            android:paddingBottom="-10dp"
            />

    </LinearLayout>
</LinearLayout>