<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_allot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_allot_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="订单id"
            />

        <TextView
            android:id="@+id/tv_title_allot_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="订单名称"
            />

        <TextView
            android:id="@+id/tv_title_allot_opUser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="申请人"
            />
        <TextView
            android:id="@+id/tv_title_allot_createDept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="申请公司"
            />
        <TextView
            android:id="@+id/tv_title_allot_execDept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="执行公司" />
        <TextView
            android:id="@+id/tv_title_allot_createTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="申请时间"
            />
    </LinearLayout>
</LinearLayout>