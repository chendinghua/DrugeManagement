<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">




        <TextView
            android:id="@+id/tv_title_inventory_operation_rfid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="RFID"
            android:maxLines="2"
            android:ellipsize="end"
            />



        <TextView
            android:id="@+id/tv_title_inventory_operation_SerialNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序列号"
            android:maxLines="2"
            android:ellipsize="end"
            />




          <TextView
              android:id="@+id/tv_title_inventory_operation_product_name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="产品名称" />

        <TextView
            android:id="@+id/tv_title_inventory_operation_assets_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="资产类型" />
    </LinearLayout>


</LinearLayout>