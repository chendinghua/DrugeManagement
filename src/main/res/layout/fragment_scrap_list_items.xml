<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="33dp">



    <TextView
        android:id="@+id/tv_scrap_list_item_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="编号"
        android:ellipsize="end"
        android:maxLines="2"
        />

    <TextView

        android:id="@+id/tv_scrap_list_item_LotSerialNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="序列号"
        android:ellipsize="end"
        android:maxLines="2"
        />



    <TextView
        android:id="@+id/tv_scrap_list_item_ScrapReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="描述"
        android:ellipsize="end"
        android:maxLines="2"
        />


    <TextView

        android:id="@+id/tv_scrap_list_item_OpUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="操作员"
        android:ellipsize="end"
        android:maxLines="2"
        />

    <TextView

        android:id="@+id/tv_scrap_list_item_OpTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="操作时间"
        android:ellipsize="end"
        android:maxLines="2"
        />

    <TextView

        android:id="@+id/tv_scrap_list_item_Status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="操作状态"
        android:ellipsize="end"
        android:maxLines="2"
        />
</LinearLayout>